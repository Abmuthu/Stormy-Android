<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                tools:background="@drawable/main_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clear_day"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/timeTextView"
        android:layout_toEndOf="@+id/timeTextView"
        android:id="@+id/iconImageView"
        android:layout_centerHorizontal="false"/>
    <TextView
        android:text="12 PM"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/timeTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
    <TextView
        android:text="Partly sunny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/timeTextView"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_toEndOf="@+id/iconImageView"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/summaryTextView"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tempTextView"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white" android:textSize="20sp"/>
</RelativeLayout>